<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CWASHPRO" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/mainColor</item>                       <!--Màu chính (ví dụ nền AppBar)-->
        <item name="colorPrimaryDark">@color/mainColor</item>               <!--Màu nền thanh trạng thái điện thoại-->
        <item name="android:navigationBarColor">@color/mainColor</item>   <!--Màu nền điều hướng điện thoại-->
        <item name="colorAccent">@color/mainColor</item>                         <!--Màu nhấn mạnh (kiểm trong checkbox, gạch chân TextBox ...)-->
        <!--Màu nền Activity-->
        <item name="android:textColorPrimary">@color/mainColor</item>       <!--Màu chữ trong các control như Button ... -->
        <item name="android:textColorSecondary">@color/textColorSecondary</item>   <!--Màu chữ ở trạng thái  ... -->
    </style>
    <style name="Theme.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>                       <!--Màu chính (ví dụ nền AppBar)-->
        <item name="colorPrimaryDark">@color/white</item>               <!--Màu nền thanh trạng thái điện thoại-->
        <item name="android:navigationBarColor">@color/white</item>   <!--Màu nền điều hướng điện thoại-->
        <item name="colorAccent">@color/white</item>                         <!--Màu nhấn mạnh (kiểm trong checkbox, gạch chân TextBox ...)-->
        <!--Màu nền Activity-->
        <item name="android:textColorPrimary">@color/mainColor</item>       <!--Màu chữ trong các control như Button ... -->
        <item name="android:textColorSecondary">@color/textColorSecondary</item>   <!--Màu chữ ở trạng thái  ... -->
    </style>

</resources>