<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_size_15dp"
    android:background="@drawable/bg_item"
    android:gravity="center"
    android:padding="@dimen/padding_size_8dp">

    <ImageView
        android:id="@+id/img"
        android:layout_weight="1"
        android:layout_width="@dimen/size_100dp"
        android:layout_height="@dimen/size_100dp"
        android:src="@drawable/ic_cancel"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100dp"
        android:layout_weight="6"
        android:layout_marginStart="@dimen/margin_size_8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin_size_8dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitleName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ui_text_regular"
                    android:text="Khách hàng: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitleService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dịch vụ: "
                    android:fontFamily="@font/ui_text_regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/tvService"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitleVehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hãng xe: "
                    android:fontFamily="@font/ui_text_regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/tvVehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitleTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời gian: "
                    android:fontFamily="@font/ui_text_regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!--        <Button-->
        <!--            android:id="@+id/btnViewDetails"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="@dimen/size_60dp"-->
        <!--            android:layout_marginHorizontal="@dimen/margin_size_75dp"-->
        <!--            android:text="CHI TIẾT"-->
        <!--            android:textColor="@color/white"-->
        <!--            android:textSize="@dimen/text_size_10sp"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintTop_toBottomOf="@id/tvVehicle" />-->


    </RelativeLayout>
    <com.github.nikartm.button.FitButton
        android:id="@+id/btnViewDetails"
        android:layout_width="@dimen/size_80dp"
        android:layout_height="@dimen/size_80dp"
        android:enabled="true"
        android:gravity="center"
        app:fb_backgroundColor="@color/white"
        app:fb_borderColor="@color/mainColor"
        app:fb_borderWidth="@dimen/border_size_2dp"
        app:fb_cornerRadius="@dimen/radius_size_2dp"
        app:fb_divColor="#fff"
        app:fb_divWidth="@dimen/size_1dp"
        app:fb_iconColor="#344187"
        app:fb_iconMarginBottom="@dimen/margin_size_5dp"
        android:fontFamily="@font/sf_pro_text_bold"
        app:fb_iconPosition="top"
        app:fb_rippleColor="#FBE9E7"
        app:fb_shape="circle"
        app:fb_text="Chi Tiết"
        app:fb_textColor="@color/black"
        app:fb_textSize="@dimen/text_size_20sp"
        app:fb_textStyle="bold" />
</LinearLayout>