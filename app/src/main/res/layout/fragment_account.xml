<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.customer.fragments.AccountFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_90dp"
        android:background="@drawable/bg_header_top_bar"
        android:gravity="center">



        <TextView
            style="@style/TextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_size_16dp"
            android:layout_marginBottom="@dimen/margin_size_15dp"
            android:gravity="center"
            android:text="Tài khoản"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_size__30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutUserInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_size_15dp"
                android:layout_marginTop="@dimen/margin_size_15dp"
                android:background="@drawable/bg_list_news"
                android:orientation="horizontal"
                android:padding="@dimen/padding_size_16dp">

                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="@dimen/size_100dp"
                    android:layout_height="@dimen/size_100dp"
                    app:siBorderWidth="@dimen/border_size_1dp"
                    app:siRadius="@dimen/radius_size_15dp"
                    app:siSquare="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/padding_size_16dp">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_text_bold"
                        android:textColor="#344187"
                        android:textSize="@dimen/text_size_18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_size_10dp"
                        android:fontFamily="@font/sf_pro_text_bold"
                        android:textColor="#344187"
                        android:textSize="@dimen/text_size_18sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_size_15dp"
                android:text="Tài khoản của bạn"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_marginHorizontal="@dimen/margin_size_15dp"
                android:id="@+id/layoutInfo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_60dp"
                android:layout_marginTop="@dimen/margin_size_8dp"
                android:background="@drawable/bg_text_view"
                android:orientation="horizontal"
                android:padding="@dimen/padding_size_8dp">

                <TextView
                    style="@style/TextElement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:paddingHorizontal="@dimen/padding_size_8dp"
                    android:text="@string/accInfo"
                    android:textSize="@dimen/text_size_22sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/size_30dp"
                    android:layout_height="@dimen/size_24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_arrow_forward_ios" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"
                android:background="#FBF9F9" />

            <LinearLayout
                android:layout_marginHorizontal="@dimen/margin_size_15dp"
                android:id="@+id/layoutChangePw"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_60dp"
                android:layout_marginTop="@dimen/margin_size_8dp"
                android:background="@drawable/bg_text_view"
                android:orientation="horizontal"
                android:padding="@dimen/padding_size_8dp">


                <TextView
                    style="@style/TextElement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:paddingHorizontal="@dimen/margin_size_8dp"
                    android:text="@string/textview_changepw"
                    android:textSize="@dimen/text_size_22sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/size_30dp"
                    android:layout_height="@dimen/size_24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_arrow_forward_ios" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"
                android:background="#FBF9F9" />

            <LinearLayout
                android:layout_marginHorizontal="@dimen/margin_size_15dp"
                android:id="@+id/layoutNoti"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_60dp"
                android:layout_marginTop="@dimen/margin_size_8dp"
                android:background="@drawable/bg_text_view"
                android:orientation="horizontal"
                android:padding="@dimen/padding_size_8dp"
                tools:ignore="OnClick">


                <TextView
                    style="@style/TextElement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:paddingHorizontal="@dimen/padding_size_8dp"
                    android:text="@string/notification"
                    android:textSize="@dimen/text_size_22sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/size_30dp"
                    android:layout_height="@dimen/size_24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_arrow_forward_ios" />
            </LinearLayout>



            <LinearLayout
                android:layout_marginHorizontal="@dimen/margin_size_15dp"
                android:id="@+id/layoutHistory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_60dp"
                android:layout_marginTop="@dimen/margin_size_8dp"
                android:background="@drawable/bg_text_view"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding_size_8dp"
                tools:ignore="OnClick">


                <TextView
                    style="@style/TextElement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:paddingHorizontal="@dimen/padding_size_8dp"
                    android:text="@string/history"
                    android:textSize="@dimen/text_size_22sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/size_30dp"
                    android:layout_height="@dimen/size_24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_arrow_forward_ios" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="@dimen/margin_size_15dp"
                android:id="@+id/layoutLogout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_60dp"
                android:layout_marginTop="@dimen/margin_size_8dp"
                android:background="@drawable/bg_text_view"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding_size_8dp"
                tools:ignore="OnClick">


                <TextView
                    style="@style/TextElement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:paddingHorizontal="@dimen/padding_size_8dp"
                    android:text="@string/logout"
                    android:textSize="@dimen/text_size_22sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/size_30dp"
                    android:layout_height="@dimen/size_24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_arrow_forward_ios" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>