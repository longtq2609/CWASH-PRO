<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/padding_size_20dp">


    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/imgNews"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_200dp"
        app:siBorderColor="@color/mainColor"
        app:siBorderWidth="@dimen/border_size_2dp"
        app:siRadius="@dimen/radius_size_15dp" />


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_size_15dp"
        android:fontFamily="@font/sf_pro_text_bold"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20sp" />


    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ui_text_regular"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_15sp" />
</LinearLayout>