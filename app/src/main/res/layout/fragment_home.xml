<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.customer.fragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/header_top_bar"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="15dp"
            android:contentDescription="@string/report"
            android:foregroundGravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            style="@style/TextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="Trang chủ"
            android:textColor="@color/white"
            android:textStyle="bold"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="15dp"
            android:contentDescription="@string/report"
            android:foregroundGravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_notifications_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp">

        <LinearLayout
            android:id="@+id/layoutUserInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_list_news"
            android:orientation="horizontal"
            android:padding="16dp">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/imgAvatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:siBorderWidth="1dp"
                app:siRadius="15dp"
                app:siSquare="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:textColor="#344187"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:textColor="#344187"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/LayoutListService"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/layoutUserInfo"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="16dp"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.github.nikartm.button.FitButton
                android:id="@+id/btnOpenWashService"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:enabled="true"
                android:gravity="center"
                app:fb_backgroundColor="@color/white"
                app:fb_borderColor="@color/mainColor"
                app:fb_borderWidth="2dp"
                app:fb_cornerRadius="2dp"
                app:fb_divColor="#fff"
                app:fb_divWidth="1dp"
                app:fb_icon="@drawable/ic_car_wash"
                app:fb_iconColor="#344187"
                app:fb_iconHeight="50dp"
                app:fb_iconMarginBottom="5dp"
                app:fb_iconPosition="top"
                app:fb_iconWidth="50dp"
                app:fb_rippleColor="#FBE9E7"
                app:fb_shape="circle"
                app:fb_text="Rửa xe"
                app:fb_textColor="#344187"
                app:fb_textSize="12sp"
                app:fb_textStyle="bold" />

            <com.github.nikartm.button.FitButton
                android:id="@+id/btnOpenVehicle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="38dp"
                android:enabled="true"
                android:gravity="center"
                app:fb_backgroundColor="@color/white"
                app:fb_borderColor="@color/mainColor"
                app:fb_borderWidth="2dp"
                app:fb_cornerRadius="2dp"
                app:fb_divColor="#fff"
                app:fb_divWidth="1dp"
                app:fb_icon="@drawable/ic_traffic_jam"
                app:fb_iconColor="#344187"
                app:fb_iconHeight="50dp"
                app:fb_iconMarginBottom="5dp"
                app:fb_iconPosition="top"
                app:fb_iconWidth="50dp"
                app:fb_rippleColor="#FBE9E7"
                app:fb_shape="circle"
                app:fb_text="Phương tiện"
                app:fb_textColor="#344187"
                app:fb_textSize="12sp"
                app:fb_textStyle="bold" />

            <com.github.nikartm.button.FitButton
                android:id="@+id/btnOpenHistory"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:enabled="true"
                android:gravity="center"
                app:fb_backgroundColor="@color/white"
                app:fb_borderColor="@color/mainColor"
                app:fb_borderWidth="2dp"
                app:fb_cornerRadius="2dp"
                app:fb_divColor="#fff"
                app:fb_divWidth="1dp"
                app:fb_icon="@drawable/ic_history_car"
                app:fb_iconColor="#344187"
                app:fb_iconHeight="50dp"
                app:fb_iconMarginBottom="5dp"
                app:fb_iconPosition="top"
                app:fb_iconWidth="50dp"
                app:fb_rippleColor="#FBE9E7"
                app:fb_shape="circle"
                app:fb_text="Lịch sử"
                app:fb_textColor="#344187"
                app:fb_textSize="12sp"
                app:fb_textStyle="bold" />
        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/LayoutListService"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="5dp"
            android:background="#344187" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/line"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_page_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingStart="80dp"
                android:paddingEnd="80dp" />

            <me.relex.circleindicator.CircleIndicator3
                android:id="@+id/dotViewPage"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                app:ci_drawable="@drawable/custom_background_indicator" />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>