<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/padding_size_8dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimation"
        app:lottie_autoPlay="true"
        app:lottie_fileName="fail-animation.json"
        app:lottie_loop="true"
        android:layout_width="@dimen/size_150dp"
        android:layout_height="@dimen/size_150dp"
        android:layout_marginVertical="15dp" />

    <TextView
        android:id="@+id/tvTitleDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_21dp"
        android:text="Đăng nhập thất bại"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCancelDialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp"
        android:layout_marginHorizontal="@dimen/margin_size_15dp"
        android:layout_marginTop="@dimen/margin_size_21dp"
        android:background="@drawable/shape_btn_login"
        android:text="Quay lại"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_16sp"
        android:textStyle="bold" />
</LinearLayout>