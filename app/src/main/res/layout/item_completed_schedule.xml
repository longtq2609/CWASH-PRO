<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_size_15dp"
    android:background="@drawable/bg_item"
    android:gravity="center"
    android:padding="@dimen/padding_size_8dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/img"
        android:layout_width="@dimen/size_100dp"
        android:layout_height="@dimen/size_100dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="complete-animation.json"
        app:lottie_loop="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100dp"
        android:layout_marginStart="@dimen/margin_size_8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin_size_8dp"
            android:layout_toStartOf="@+id/btnViewDetails"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitleName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khách hàng: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitleService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dịch vụ: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/tvService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitleVehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hãng xe: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/tvVehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wave Alpha"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitleTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời gian: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:00 Ngày 31 tháng 3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!--        <Button-->
        <!--            android:layout_marginHorizontal="75dp"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:id="@+id/btnViewDetails"-->
        <!--            android:layout_height="@dimen/size_60dp"-->
        <!--            android:text="CHI TIẾT"-->
        <!--            android:textColor="@color/white"-->
        <!--            android:textSize="@dimen/text_size_10sp"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintTop_toBottomOf="@id/tvVehicle" />-->
        <com.github.nikartm.button.FitButton
            android:id="@+id/btnViewDetails"
            android:layout_width="@dimen/size_100dp"
            android:layout_height="@dimen/size_100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:enabled="true"
            android:gravity="center"
            app:fb_backgroundColor="@color/white"
            app:fb_borderColor="@color/mainColor"
            app:fb_borderWidth="@dimen/border_size_2dp"
            app:fb_cornerRadius="@dimen/radius_size_2dp"
            app:fb_divColor="#fff"
            app:fb_divWidth="@dimen/size_1dp"
            app:fb_iconColor="#344187"
            app:fb_iconMarginBottom="@dimen/margin_size_5dp"
            app:fb_iconPosition="top"
            app:fb_rippleColor="#FBE9E7"
            app:fb_shape="circle"
            app:fb_text="Chi Tiết"
            app:fb_textColor="#344187"
            app:fb_textSize="@dimen/text_size_15sp"
            app:fb_textStyle="bold" />

    </RelativeLayout>

</LinearLayout>