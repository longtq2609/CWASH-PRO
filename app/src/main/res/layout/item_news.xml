<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/margin_size_8dp"
    android:background="@drawable/bg_list_news"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/padding_size_15dp">

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/imgNews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_size_15dp"
        app:siBorderWidth="@dimen/border_size_1dp"
        app:siRadius="@dimen/radius_size_15dp"
        app:siSquare="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_15dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:gravity="center"
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/sf_pro_text_bold"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>

