<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">

    <com.github.nikartm.button.FitButton
        android:id="@+id/icCamera"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:enabled="true"
        android:gravity="center_vertical"
        app:fb_backgroundColor="@color/white"
        app:fb_borderColor="@color/mainColor"
        app:fb_borderWidth="2dp"
        app:fb_cornerRadius="15dp"
        app:fb_divColor="#fff"
        app:fb_divWidth="1dp"
        app:fb_icon="@drawable/ic_camera"
        app:fb_iconColor="@color/black"
        app:fb_iconHeight="40dp"
        app:fb_iconMarginStart="20dp"
        app:fb_iconPosition="left"
        app:fb_iconWidth="40dp"
        app:fb_rippleColor="#FBE9E7"
        app:fb_shape="rectangle"
        app:fb_text="Chụp ảnh"
        app:fb_textColor="@color/black"
        app:fb_textPaddingStart="100dp"
        app:fb_textSize="16sp"
        app:fb_textStyle="bold" />

    <com.github.nikartm.button.FitButton
        android:id="@+id/icImage"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/text_size_18"
        android:enabled="true"
        android:gravity="center_vertical"
        app:fb_backgroundColor="@color/white"
        app:fb_borderColor="@color/mainColor"
        app:fb_borderWidth="2dp"
        app:fb_cornerRadius="15dp"
        app:fb_divColor="#fff"
        app:fb_divWidth="1dp"
        app:fb_icon="@drawable/ic_image"
        app:fb_iconColor="@color/black"
        app:fb_iconHeight="40dp"
        app:fb_iconMarginStart="20dp"
        app:fb_iconPosition="left"
        app:fb_iconWidth="40dp"
        app:fb_rippleColor="#FBE9E7"
        app:fb_shape="rectangle"
        app:fb_text="Chọn ảnh"
        app:fb_textColor="@color/black"
        app:fb_textPaddingStart="100dp"
        app:fb_textSize="16sp"
        app:fb_textStyle="bold" />
</LinearLayout>